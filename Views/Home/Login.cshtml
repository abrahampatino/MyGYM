@model Login

@{
    ViewData["Title"] = "Log in";
}

<h1 class="tittle">Inicio de Sesi&oacute;n</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Bienvenido, identifiquese para comenzar</h4>
                <hr />
                <div class="form-group form-login">
                    <label asp-for="User">Usuario</label>
                    <input asp-for="User" class="form-control" placeholder="user01" required/>
                    <span asp-validation-for="User" class="text-danger" ></span>
                </div>
                <div class="form-group form-login">
                    <label asp-for="Password">Contrase&ntilde;a</label>
                    <input asp-for="Password" class="form-control" placeholder="******" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @if (ViewBag.Error)
                {
                    <div class="form-group">
                        <span>Usuario o contrase&ntilde;a erroneo</span>
                    </div>
                }

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Ingresar</button>
                </div>

            </form>
        </section>
    </div>
 
</div>

