@model Proyectov1.Models.Mobiliario

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Mobiliario</h1>

<h3>Esta seguro de eliminar Mobiliario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            Nombre de Mobiliario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MobApaNombre)
        </dd>
        <dt class="col-sm-4">
            Estado
        </dt>
        @if (Model.ApaEstatus.Value)
        {
            <dd class="col-sm-10 active-state">
                Activo
            </dd>
        }
        else
        {
            <dd class="col-sm-10 inactive-state">
                Inactivo
            </dd>
        }
        
        <dt class="col-sm-4">
            Tipo de Aparato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apa.ApaNombre)
        </dd>
    </dl>
    
    <form asp-action="Delete" style="margin:2% 1% 1% 7.5%">
        <input type="hidden" asp-for="MobId" />
        <input type="hidden" asp-for="ApaId" />
        <a class="btn btn-success" href="/Admin/Mobiliario">Regresar a listado</a>
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
