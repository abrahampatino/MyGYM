@model Proyectov1.Models.Aparato

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Tipo de Aparatos</h1>

<h3>Esta seguro de eliminar a Tipo de Aparatos?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tipo de Aparato
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApaNombre)
        </dd>
        <dt class = "col-sm-2">
            Descripci&oacute;n
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApaDescripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete" style="margin:2% 1% 1% 7.5%">
        <input type="hidden" asp-for="ApaId" />
        <a class="btn btn-success" href="/Admin/Aparatos">Regresar a listado</a>
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
