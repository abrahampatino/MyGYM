@model Proyectov1.Models.Persona

@{
    ViewData["Title"] = "Mi Perfil";
}

<h1>Mi Perfil - @Model.Usu.UsuName</h1>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usu.UsuCorr)
        </dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @String.Concat(Model.PerNombre, " ", Model.PerNombre2, " ", Model.PerPaterno, " ", Model.PerMaterno)
        </dd>
        <dt class="col-sm-2">
            RFC
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpRfc)
        </dd>
        <dt class="col-sm-2">
            IMSS
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpImss)
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        @if (Model.PerEstado.Value)
        {
        <dd class="col-sm-10">
            Activo
        </dd>
        }
        else
        {
        <dd class="col-sm-10">
            Inactivo
        </dd>
        }
        <dt class="col-sm-2">
            Numero de Socios
        </dt>
        <dd class="col-sm-10">
            @ViewBag.numsocios
        </dd>
    </dl>
    
</div>
