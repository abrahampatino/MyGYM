@model Proyectov1.Models.Persona

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Socio</h1>

<hr />
<div class="row">
    <div class="col-md-4">        
        <form asp-action="Edit">
            <input type="hidden" asp-for="PerId" />
            <div class="form-row">
                <div class="form-group col-md-10">
                    <label for="Usuario" class="control-label">Usuario</label>
                    <input readonly name="Usuario" value="@Model.Usu.UsuName" class="form-control read" />
                </div>
                <div class="form-group col-md-10">
                    <label for="Nombre" class="control-label">Nombre</label>
                    <input readonly name="Nombre" value="@String.Concat(Model.PerNombre, " ", Model.PerNombre2, " ", Model.PerPaterno, " ", Model.PerMaterno)" class="form-control read" />
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="SocAltura" class="control-label">Altura(m)</label>
                    <input asp-for="SocAltura" class="form-control" type="number" placeholder="1.78" step="0.1" max="2.10" min="1.2" required />
                    <span asp-validation-for="SocAltura" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label for="SocPeso" class="control-label">Peso(Kg)</label>
                    <input asp-for="SocPeso" class="form-control" type="number" placeholder="55.5" step=".1" max="110" min="40" required />
                    <span asp-validation-for="SocPeso" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label for="SocTelefono" class="control-label">Telefono</label>
                    <input asp-for="SocTelefono" type="number" class="form-control" maxlength="10" minlength="10" placeholder="5512345678" required />
                    <span asp-validation-for="SocTelefono" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="form-group-buttons">
                    <a class="btn btn-success" href="/Emple/MisSocios">Regresar a Listado</a>
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
